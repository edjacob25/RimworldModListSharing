@{
    ViewData["Title"] = "Home Page";
}
@model FileUpload
@using static WebApplication.Models.FileUpload

<div class="text-center">
    <h1 class="display-4">Share your modlists</h1>
    <p>
        As of right now, this page is only compatible with the xml files generated by <a href="https://steamcommunity.com/sharedfiles/filedetails/?id=1507748539">ModManager</a>. A creation of <a href="https://steamcommunity.com/id/FluffyMods">Fluffy</a>.
    </p>
    <p>
        These files can be encountered in:
    </p>
    <ul>
        <li><code>%APPDATA%\LocalLow\Ludeon Studios\RimWorld by Ludeon Studios\ModLists</code> on Windows</li>
        <li><code>~/.config/unity3d/Ludeon Studios/RimWorld by Ludeon Studios/ModLists</code> on Linux</li>
        <li><code>~/Library/Application Support/RimWorld/ModLists</code> on Mac</li>
    </ul>

    <form enctype="multipart/form-data" method="post" asp-action="Upload">
        <dl>
            <dt>
                <label asp-for="FormFile"></label>
            </dt>
            <dd>
                <input asp-for="FormFile" type="file">
            </dd>
            <dt>
                <label asp-for="Name"></label>
            </dt>
            <dd>
                <input asp-for="Name" type="text">
            </dd>
            <dt>
                <label asp-for="Version"></label>
            </dt>
            @foreach (var version in Versions)
            {
                <dd>
                    <input type="radio" asp-for="Version" value="@version"/> @version<br/>
                </dd>
            }
            <dt>
                <label asp-for="ExpansionsUsed"></label>
            </dt>
            @foreach (var expansion in Expansions)
            {
                <dd>
                    <input type="checkbox" name="ExpansionsUsed" value="@expansion"/> @expansion<br/>
                </dd>
            }
        </dl>
        <input class="btn" type="submit" value="Upload">
    </form>
</div>